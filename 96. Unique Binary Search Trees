class Solution {
public:
    int numTrees(int n) {
        int dp[n + 1];  //create array length dynamically
        dp[0] = 1;
        dp[1] = 1;
        for(int i = 2; i <= n; i ++){
            dp[i] = 0;  //这里一直忘记了给数组元素赋初值，这。。
            for(int j = 1; j <= i; j ++){
                dp[i] = dp[i] + dp[j - 1] * dp[i - j];
            }
        }
        return dp[n];
    }
};

//https://leetcode.com/discuss/24282/dp-solution-in-6-lines-with-explanation-f-i-n-g-i-1-g-n-i
