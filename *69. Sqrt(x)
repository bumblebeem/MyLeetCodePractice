public class Solution {
    public int mySqrt(int x) {
        int left = 1, right = x;
        int res = 0;
        while(left <= right){
            int mid = left + (right - left) / 2;
            if(mid > x / mid){
                right = mid - 1;
            }else{
                left = mid + 1;
                res = mid;
            }
        }
        return res;
    }
}

//line 6 & 7, to prevent overflow, haha, got it.
//line 5 & 7, don't understand why use <= and > seperately...


