class Solution {
public:
    int climbStairs(int n) {
        if(n < 0){
            return 0;
        }
        else if(n <= 2){
            return n;
        }
        int step1 = 1, step2 = 2;
        int result = 3;
        for(int i = 3; i <= n; i ++){
            result = step1 + step2;
            step1 = step2;
            step2 = result;
        }
        return result;
    }
};

/*
  The only thing need to be pay attention to is that there is no need to keep track on an array called dp,
  because we only need keep track of step1 and step2 as the code did above.
*/
