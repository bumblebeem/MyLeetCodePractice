bool isPowerOfThree(int n) {
    while(n > 0 && n % 3 == 0){
        n /= 3;
    }
    return n == 1;
}


bool isPowerOfThree(int n) {
    if(n < 0){
        return false;
    }
    if(n == 1){
        return true;
    }
    long a = 3;
    while(a < n){
        a *= 3;
    }
    if(a == n){
        return true;
    }
    return false;
}
