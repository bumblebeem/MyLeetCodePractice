public class Solution {
    public int threeSumClosest(int[] nums, int target) {
        Arrays.sort(nums);
        int res = nums[0] + nums[1] + nums[2];  //there are at least 3 elements in the array, just initialize res.
        
        for(int i = 0; i < nums.length - 2; i ++) {
            int start = i + 1;
            int end = nums.length - 1;
            while(start < end) {
                int sum = nums[i] + nums[start] + nums[end];
                if(sum == target) {
                    return sum;
                }
                if(Math.abs(sum - target) < Math.abs(res - target)) {
                    res = sum;
                }
                if(sum > target) {
                    end --;
                } else {
                    start ++;
                }
            }
        }
        
        return res;
    }
}
